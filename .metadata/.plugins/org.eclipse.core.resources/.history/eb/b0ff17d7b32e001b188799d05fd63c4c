<script>
	
	
	getList();
	
	function getList() {
		$.ajax({
			type:"get",
			url:"cgv.json",
			success:function(data) {
				var temp = Handlebars.compile($("#temp").html());
				 $("#divCGV").html(temp(data));
			}
		});
	}
</script>
